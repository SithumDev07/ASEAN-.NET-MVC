<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    @Styles.Render("~/Content/learningprofile")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- HEADER -->
    <nav class="navigation-bar border-bottom bg-white h-7">
        <div class="container d-block">
            <div class="row gy-3 flex-md-nowrap">
                <div class="col-12 col-md-4 col-lg-4 col-xl-3 d-flex align-items-center header-logo-wrapper">
                    <button type="button" class="btn btn-default p-0" id="SideBarHandler">
                        <i class="bi bi-list icon"></i>
                    </button>
                    <div class="d-flex align-items-center">
                        <img src="./Content/Images/asean-logo.png" class="header-logo" alt="LOGO">
                        <a href="/" class="navbar-brand fs-2 brand-name user-select-none">ASEAN</a>
                    </div>

                    <div class="align-items-center justify-content-end mobile-usericon-wrapper header-user-wrapper">
                        <i class="bi bi-bell icon"></i>
                        <div class="ms-4 d-inline-flex flex-column align-content-center icon-wrapper" style="height: auto;">
                            <button type="button" class="border-0 user-icon" style="background-image: url('../../Content/Images/LearnerProfile/propic.png');">
                            </button>
                            <p class="smallest-text m-0 text-center ">Jammy</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                    <div class="dropdown">
                        <button type="button" class="btn asean-primary dropdown-toggle text-white" id="categoryDropDown" data-bs-toggle="dropdown" aria-expanded="false">
                            Categories
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="categoryDropDown">
                            <li><a class="dropdown-item" href="#">Orientation Courses</a></li>
                            <li><a class="dropdown-item" href="#">Skill Development Courses</a></li>
                            <li><a class="dropdown-item" href="#">External Courses</a></li>
                        </ul>
                    </div>
                    <form class="w-100">
                        <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
                    </form>
                </div>
                <div class="col-2 col-lg-2 col-xl-3 d-none d-md-flex align-items-center justify-content-end last-child header-user-wrapper">
                    <i class="bi bi-bell icon"></i>
                    <div class="ms-4 d-inline-flex flex-column align-content-center icon-wrapper" style="height: auto;">
                        <button type="button" class="border-0 user-icon" style="background-image: url('../../Content/Images/LearnerProfile/propic.png');">
                        </button>
                        <p class="smallest-text m-0 text-center ">Jammy</p>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <aside class="sidebar close shadow">
        <div class="menu-bar">
            <div class="menu">
                <ul class="aside-links">
                    <li>
                        <a href="/plan" id="plan" data-toggle="tooltip" data-placement="right" title="Plan">
                            <i class="bi bi-mortarboard icon"></i>
                            <span class="text nav-text">Plan</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" id="calender" data-toggle="tooltip" data-placement="right" title="Calender">
                            <i class="bi bi-calendar-event icon"></i>
                            <span class="text nav-text">Calender</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" id="recommnedations" data-toggle="tooltip" data-placement="right" title="Recommnedations">
                            <i class="bi bi-award icon"></i>
                            <span class="text nav-text">Recommnedations</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" id="interested" data-toggle="tooltip" data-placement="right" title="Interested Courses">
                            <i class="bi bi-star icon"></i>
                            <span class="text nav-text">Interested Courses</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </aside>

    <!-- END HEADER -->

    @RenderBody()


    <!-- FOOTER -->
    <footer class="footer mt-auto border-top border-2">
        <div class="container pt-5 pb-3">
            <div class="row">
                <ul class="col-12 col-md-4 col-lg-6 d-flex footer-left">
                    <a href="#" class="text-asean-primary">Privacy</a>
                    <span class="ms-2 me-2 ms-lg-3 me-lg-3">|</span>
                    <a href="#" class="text-asean-primary">Disclaimer</a>
                </ul>
                <div class="col-12 col-md-8 col-lg-6 footer-right d-flex flex-column mt-3 mt-md-0">
                    <div class="powered-by d-flex">
                        <p class="me-2">Powered By</p>
                        <a href="https://www.geoedge.lk/" target="_blank">
                            <img src="~/Content/Images/geoedge-logo.png" alt="GeoEdge Logo" class="mb-1">
                        </a>
                    </div>
                    <p class="">Copyright ©️ 2022 ASEAN Secretariat. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- END OF FOOTER -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/learningprofile")
    @RenderSection("scripts", required: false)
</body>
</html>
