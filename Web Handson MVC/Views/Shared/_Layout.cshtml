<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- HEADER -->
    <nav class="navigation-bar border-bottom bg-white h-7">
        <div class="container d-block">
            <div class="row gy-3 flex-md-nowrap">
                <div class="col-12 col-md-4 col-lg-4 col-xl-3 d-flex align-items-center header-logo-wrapper">
                    <button type="button" class="btn btn-default p-0" id="SideBarHandler">
                        <i class="bi bi-list icon"></i>
                    </button>
                    <div class="d-flex align-items-center">
                        <img src="./Content/Images/asean-logo.png" class="header-logo" alt="LOGO">
                        <a href="#" class="navbar-brand fs-2 brand-name user-select-none">ASEAN</a>
                    </div>

                    <div class="align-items-center justify-content-end mobile-usericon-wrapper header-user-wrapper">
                        <i class="bi bi-bell icon"></i>
                        <div class="ms-4 d-inline-flex flex-column align-content-center icon-wrapper" style="height: auto;">
                            <button type="button" class="border-0 user-icon" style="background-image: url('https://images.unsplash.com/photo-1650477733936-06fa48166e5c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80');">
                            </button>
                            <p class="smallest-text m-0 text-center ">James</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                    <div class="dropdown">
                        <button type="button" class="btn btn-dark dropdown-toggle" id="categoryDropDown" data-bs-toggle="dropdown" aria-expanded="false">
                            Categories
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="categoryDropDown">
                            <li><a class="dropdown-item" href="#">Provincial</a></li>
                            <li><a class="dropdown-item" href="#">Provincial</a></li>
                            <li><a class="dropdown-item" href="#">Provincial</a></li>
                            <li><a class="dropdown-item" href="#">Provincial</a></li>
                        </ul>
                    </div>
                    <form class="w-100">
                        <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
                    </form>
                </div>
                <div class="col-2 col-lg-2 col-xl-3 d-none d-md-flex align-items-center justify-content-end last-child header-user-wrapper">
                    <i class="bi bi-bell icon"></i>
                    <div class="ms-4 d-inline-flex flex-column align-content-center icon-wrapper" style="height: auto;">
                        <button type="button" class="border-0 user-icon" style="background-image: url('https://images.unsplash.com/photo-1650477733936-06fa48166e5c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80');">
                        </button>
                        <p class="smallest-text m-0 text-center ">James</p>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <aside class="sidebar close shadow">
        <div class="menu-bar">
            <div class="menu">
                <ul class="aside-links">
                    <li>
                        <a href="#">
                            <i class="bi bi-house icon"></i>
                            <span class="text nav-text">Home</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-person-circle icon"></i>
                            <span class="text nav-text">My Courses</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-question-circle icon"></i>
                            <span class="text nav-text">FAQ</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </aside>

    <!-- END HEADER -->

    @RenderBody()

    <!-- FOOTER -->
    <footer class="footer mt-auto border-top border-2">
        <div class="container pt-5 pb-3">
            <div class="row">
                <ul class="col-12 col-md-4 col-lg-6 d-flex footer-left">
                    <a href="#">About</a>
                    <span class="ms-2 me-2 ms-lg-3 me-lg-3">|</span>
                    <a href="#">Legal Notice</a>
                    <span class="ms-2 me-2 ms-lg-3 me-lg-3">|</span>
                    <a href="#">Privacy</a>
                    <span class="ms-2 me-2 ms-lg-3 me-lg-3">|</span>
                    <a href="#">Terms & Conditions</a>
                </ul>
                <div class="col-12 col-md-8 col-lg-6 footer-right d-flex flex-column mt-3 mt-md-0">
                    <div class="powered-by d-flex">
                        <p class="me-3">Powered By</p>
                        <a href="https://www.geoedge.lk/">
                            <img src="~/Content/Images/geoedge-logo.png" alt="GeoEdge Logo">
                        </a>
                    </div>
                    <p class="mt-1">Copyright ©️ 2022 ASEAN Secretariat. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- END OF FOOTER -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
