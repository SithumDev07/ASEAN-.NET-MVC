
@{
    ViewBag.Title = "LearningPlan";
    Layout = "~/Views/Shared/_LayoutLearner.cshtml";
}

<main id="page-content" class="bg-light py-5 py-md-3">
    <div class="container">
        <div class="row d-grid gap-1">
            <div class="col-lg-12 ">
                <div class="row chartpd">
                    <!-- Start of the Pie Chart-->
                    <div class="col-12 chartmg">
                        <div><h2 class="text-start fw-bold">My Courses Progress</h2></div>
                        <div class=" chart-monitor p-5 m-0 mt-3 bg-white shadow">
                            <div>
                                <canvas id="myChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <!-- End of the Pie Chart-->
                </div>
            </div>
            <!-- Start of the Table -->
            <div class="grid m-0 mt-3 tableadjust">
                <div><h2 class="text-start fw-bold">Courses and Certifications</h2></div>
                <div class="leanerplanetable m-0 mt-3">
                    <table class="tabledatawrapper shadow">
                        <thead class="tableheader">
                            <tr>
                                <th class="align-top">Course Title</th>
                                <th class="align-top">Course Category</th>
                                <th class="align-top">Status</th>
                                <th class="align-top">Due Date</th>
                                <th class="align-top">Action</th>
                            </tr>
                        </thead>
                        <tbody id="tableData" class="text-wrap">
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- End of the Table -->
        </div>
    </div>
</main>

