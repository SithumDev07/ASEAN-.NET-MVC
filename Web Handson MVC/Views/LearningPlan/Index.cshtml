
@{
    ViewBag.Title = "LearningPlan";
    Layout = "~/Views/Shared/_LayoutLearner.cshtml";
}

<main id="page-content" class="bg-light py-5 py-md-3">
    <div class="container">
        <h2 class="text-start fw-bold">My Plan</h2>
        <div class="d-flex flex-column flex-xl-row ">
            <div class="chart-monitor p-3 p-lg-4 m-0 mt-3 bg-white shadow">
                <p class="fs-4 mb-4 fw-bold chart-title">My Courses Progress</p>
                <div class="chartContainer">
                    <canvas id="myChart"></canvas>
                </div>
            </div>
            <div class="chart-monitor p-lg-4 m-0 mt-3 bg-white shadow">
                <div class="d-flex flex-column justify-content-start courscontentdatails">
                    <div>
                        <p class="fs-4 fw-bold table-title">Detail View</p>
                    </div>
                    <table class="tabledatawrapper">
                        <thead class="tableheader">
                            <tr>
                                <th>
                                    <button type="button" class="sort-btn-table">
                                        Course Category
                                    </button>
                                </th>
                                <th>
                                    <button type="button" class="sort-btn-table">
                                        Number of Courses
                                    </button>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Pending Action</td>
                                <td>2</td>
                            </tr>
                            <tr>
                                <td>Inprogress</td>
                                <td>3</td>
                            </tr>
                            <tr>
                                <td>Expired</td>
                                <td>2</td>
                            </tr>
                            <tr>
                                <td>Overdue</td>
                                <td>1</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Start of the Table -->
        <div class="grid m-0 mt-5 tableadjust">
            <div><h2 class="text-start fw-bold">Learning & Certifications</h2></div>
            <div class="leanerplanetable m-0 mt-3">
                <table class="tabledatawrapper shadow sortable">
                    <thead class="tableheader">
                        <tr>
                            <th class="align-top">
                                <button type="button" class="sort-btn-table">
                                    Course Title
                                    <div class="header-arrows">
                                        <i class="bi bi-caret-up-fill icon"></i>
                                        <i class="bi bi-caret-down-fill icon"></i>
                                    </div>
                                </button>
                            </th>
                            <th class="align-top">
                                <button type="button" class="sort-btn-table">
                                    Course Category
                                    <div class="header-arrows">
                                        <i class="bi bi-caret-up-fill icon"></i>
                                        <i class="bi bi-caret-down-fill icon"></i>
                                    </div>
                                </button>
                            </th>
                            <th class="align-top">
                                <button type="button" class="sort-btn-table">
                                    Status
                                    <div class="header-arrows">
                                        <i class="bi bi-caret-up-fill icon"></i>
                                        <i class="bi bi-caret-down-fill icon"></i>
                                    </div>
                                </button>
                            </th>
                            <th class="align-top">
                                <button type="button" class="sort-btn-table">
                                    Due Date
                                    <div class="header-arrows">
                                        <i class="bi bi-caret-up-fill icon"></i>
                                        <i class="bi bi-caret-down-fill icon"></i>
                                    </div>
                                </button>
                            </th>
                            <th class="align-top action-header no-sort">Action</th>
                        </tr>
                    </thead>
                    <tbody id="tableData" class="text-wrap">
                    </tbody>
                </table>
            </div>
        </div>
        <!-- End of the Table -->
    </div>
</main>

